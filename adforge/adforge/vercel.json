{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "functions": {
    "api/claude.js": { "maxDuration": 60 },
    "api/create-task.js": { "maxDuration": 60 },
    "api/poll-task.js": { "maxDuration": 60 }
  },
  "rewrites": [
    { "source": "/((?!api/).*)", "destination": "/index.html" }
  ]
}
